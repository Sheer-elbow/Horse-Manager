# ===========================================
# Smart Stable Manager - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- Database ---
DATABASE_URL=postgresql://stablemanager:changeme@db:5432/stablemanager
POSTGRES_USER=stablemanager
POSTGRES_PASSWORD=changeme
POSTGRES_DB=stablemanager

# --- JWT ---
JWT_SECRET=change-this-to-a-long-random-string
JWT_REFRESH_SECRET=change-this-to-another-long-random-string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# --- Initial Admin (used by seed script on first run) ---
ADMIN_EMAIL=gwward@me.com
ADMIN_PASSWORD=ChangeMe123!

# --- SMTP (Resend) ---
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=resend
SMTP_PASS=your-resend-api-key
SMTP_FROM=noreply@holidayskitak.uk

# --- App ---
APP_URL=https://www.holidayskitak.uk
NODE_ENV=production
PORT=3000

# --- Domain (used by Caddy) ---
DOMAIN=www.holidayskitak.uk
